<div class='modal-content'>
  <div class='modal-header'>
    <FaIcon @icon={{this.icon}} @size='2x' />
    <h3>{{@options.title}}</h3>
  </div>
  <div class='modal-body'>
    <p>{{@options.text}}</p>
  </div>
  <Users::UserSelect />
  <div class='modal-footer'>
    <Common::ButtonLarge
      @text='Abbrechen'
      @design='dark-transparent'
      @onClick={{this.hide}}
    />
    <Common::ButtonLarge
      @text={{this.yesLabel}}
      @onClick={{this.onYesClickHandler}}
    />
  </div>
</div>